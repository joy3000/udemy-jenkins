pipeline {
    agent any
    stages {
        stage('Init') {
            steps {
                echo 'Hello this is the first step'
                echo 'At first there is the init stage'
            }
        }

        stage('Build') {
            steps {
                echo 'This is the build stage'
            }
        }

        stage('Deploy') {
            steps {
                echo 'This is the deploy stage'
            }
        }
    }
}